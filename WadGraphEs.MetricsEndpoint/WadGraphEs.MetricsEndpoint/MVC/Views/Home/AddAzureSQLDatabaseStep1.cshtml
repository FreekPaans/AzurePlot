@model string

@{
	Layout = "AddAzureSubscriptionPanelLayout.cshtml";
}

@section paneltitle {
	Add Azure SQL Database <small>Step 1/3 - Create database user</small>
}

<p>
	This service works by reading the performance metrics form <code>sys.resource_stats</code> management view in the <code>master</code> database of your Azure SQL Database.
	For security reasons, it's recommended to create a specific user for this purpose. To create a new user run the follow commands against your master database:
</p>

<pre>
CREATE LOGIN WAD_MonitorUser with PASSWORD='supersecretpassword'
GO
CREATE USER WAD_MonitorUser
GO
</pre>
<a class="btn btn-primary" href="@Url.RouteUrl("add-azure-sql-database-step-2", new {sessionId = Model})">Continue</a>